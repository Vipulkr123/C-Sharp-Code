@model IEnumerable<CRUDApp.Models.EmployeeModel>

@{
    ViewBag.Title = "GetAllEmployees";
}

<h2>GetAllEmployees</h2>

<h3>Total Employee : @ViewBag.TotalEmployees</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @*<input type="button" value="Edit" onclick="location.href='@Url.Action("Create", "Home")'" data-id="@item.Id" class="btn btn-primary" /> |
            <input type="button" value="Details" onclick="location.href='@Url.Action("Details", "Home")'" data-id="@item.Id" class="btn btn-primary" /> |
            <input type="button" value="Edit" onclick="location.href='@Url.Action("Delete", "Home")'" data-id="@item.Id" class="btn btn-primary" />*@
            
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
